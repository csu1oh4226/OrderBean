FROM node:18-alpine

WORKDIR /app

# Install PostgreSQL client
RUN apk add --no-cache postgresql-client

COPY package*.json ./
RUN npm ci

COPY . .

# Wait for postgres and run migrations
CMD ["sh", "-c", "until pg_isready -h postgres -p 5432; do sleep 1; done && npm run migrate && npm run seed:test && npm test"]

